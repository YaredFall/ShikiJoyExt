{
    "name": "ShikiJoy",
    "version": "0.0.1",
    "manifest_version": 3,
    "permissions": [
        "storage",
        "scripting",
        "tabs"
    ],
    "host_permissions": [
        "https://*.animejoy.ru/*",
        "*://secvideo1.online/*",
        "*://red.uboost.one/*",
        "*://video.sibnet.ru/*",
        "*://vk.com/*",
        "*://dzen.ru/*",
        "*://ok.ru/*",
        "*://*.mail.ru/*"
    ],
    "icons": {
        "128": "logo.png"
    },
    "action": {
        "default_popup": "popup.html",
        "default_title": "ShikiJoy settings"
    },
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "web_accessible_resources": [
        {
            "matches": [
                "https://*.animejoy.ru/*"
            ],
            "resources": [
                "react/dist/images/*"
            ]
        }
    ]
}