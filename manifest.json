{
    "name": "ShikiJoy",
    "version": "0.0.1",
    "manifest_version": 3,
    "icons": {
        "128": "logo.png"
    },
    "content_scripts": [
        {
            "matches": [
                "https://*.animejoy.ru/*"
            ],
            "run_at": "document_start",
            "js": [
                "script.js"
            ],
            "css" : ["index.css"]
        }
    ],
    "web_accessible_resources": [
        {
            "matches": [
                "https://*.animejoy.ru/*"
            ],
            "resources": [
                "react/dist/index.js"
            ]
        }
    ]
}