{
  "name": "shikijoy-react",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build && npm run copy-builded",
    "copy-builded": "run-script-os",
    "copy-builded:win32": "xcopy dist\\content.* ..\\extension\\bundled /i /Y & xcopy dist\\images ..\\extension\\bundled\\images /i /Y",
    "copy-builded:nix": "mkdir -p ../extension/bundled && cp -R dist/content.* ../extension/bundled & mkdir -p ../extension/bundled/images && cp -R dist/images/. ../extension/bundled/images/",
    "preview": "vite preview"
  },
  "dependencies": {
    "@headlessui/react": "^1.7.7",
    "@types/react-portal": "^4.0.4",
    "@types/react-transition-group": "^4.4.5",
    "dexie": "^3.2.3",
    "dexie-react-hooks": "^1.1.1",
    "ky": "^0.33.2",
    "plural-ru": "^2.0.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-error-boundary": "^4.0.3",
    "react-icons": "^4.7.1",
    "react-portal": "^4.2.2",
    "react-query": "^3.39.3",
    "react-router-dom": "^6.6.2",
    "react-transition-group": "^4.4.5",
    "zustand": "^4.3.2"
  },
  "devDependencies": {
    "@types/react": "^18.0.26",
    "@types/react-dom": "^18.0.9",
    "@vitejs/plugin-react": "^3.0.0",
    "sass": "^1.57.1",
    "typescript": "^4.9.3",
    "vite": "^4.0.0",
    "vite-plugin-rewrite-all": "^1.0.1"
  }
}
